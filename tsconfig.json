
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
        "@/*": ["./*"]
    }
  },
  "include": [
    "api.ts",
    "App.tsx",
    "index.tsx",
    "types.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "contexts/**/*.ts",
    "contexts/**/*.tsx",
    "i18n/**/*.ts",
    "logic/**/*.ts"
  ],
  "exclude": ["node_modules", "backend", "dist", "uploads"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
